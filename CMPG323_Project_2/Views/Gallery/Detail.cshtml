@model CMPG323_Project_2.Models.GalleryDetailModel

<div class="container body-content">
    <div class=" row image-detail-container">
        <div class="image-detail">
            <img src="@Model.Url" alt="@Model.Title" />

        </div>
    </div>
    <div class="row image-detail-meta">
        <span>Title: @Model.Title</span>
        <span>Uploaded: @Model.CreatedOn</span>
    </div>
    <div class="row controls">
        <a class="btn btn-primary" asp-controller="Gallery" asp-action="Index">Back to Gallery</a>
        <a class="btn btn-primary" href="@Model.Url">Download</a>
        <!--<a class="btn btn-primary" asp-controller="Image" asp-action="Delete">Delete</a>-->
        <a href="@Url.Action("Delete","Image",new { id = Model.Id })" class="btn btn-primary">Delete</a>
    </div>
</div>